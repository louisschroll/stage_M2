	langid = {english},
	keywords = {Conservation, Calonectris diomedea, Cory’s shearwater, Feeding hotspot, Foraging range, Habitat modelling, Important Bird Area ({IBA}), Information-Theoretic approach, Ocean remote sensing, Western Mediterranean},
