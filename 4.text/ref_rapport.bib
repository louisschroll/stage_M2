	number = {1},
	journaltitle = {Ecological Applications},
	author = {Northrup, Joseph M. and Vander Wal, Eric and Bonar, Maegwin and Fieberg, John and Laforge, Michel P. and Leclerc, Martin and Prokopenko, Christina M. and Gerber, Brian D.},
	urldate = {2024-03-15},
	date = {2022},
	langid = {english},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/eap.2470},
	keywords = {animal movement, habitat selection, integrated step-selection analysis, movement ecology, point process, radio collar, resource-selection function, step-selection function, telemetry, use-available design, wildlife},
	file = {Full Text PDF:C\:\\Users\\louis\\Zotero\\storage\\CJ677IYJ\\Northrup et al. - 2022 - Conceptual and methodological advances in habitat-.pdf:application/pdf;Snapshot:C\:\\Users\\louis\\Zotero\\storage\\WW2EGCNC\\eap.html:text/html},
