	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/2041-210X.13897},
	keywords = {Bayesian, data integration, data fusion, hierarchical model, imperfect detection, {MCMC}, occupancy model, spatial autocorrelation},
	file = {Full Text PDF:C\:\\Users\\schroll\\Zotero\\storage\\VQHLTZ5A\\Doser et al. - 2022 - spOccupancy An R package for single-species, mult.pdf:application/pdf;Snapshot:C\:\\Users\\schroll\\Zotero\\storage\\QGLIT9A7\\2041-210X.html:text/html},
