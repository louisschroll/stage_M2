	file = {Full Text PDF:C\:\\Users\\schroll\\Zotero\\storage\\9JVF556J\\Miller et al. - 2019 - The recent past and promising future for data inte.pdf:application/pdf;Snapshot:C\:\\Users\\schroll\\Zotero\\storage\\QG2KUGI7\\2041-210X.html:text/html},
