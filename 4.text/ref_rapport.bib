	keywords = {data fusion, spatial point process, citizen science, ecological niche model, species distribution model, habitat suitability model, integrated model, Special Feature: Data Integration for Population Models},
	file = {Full Text PDF:C\:\\Users\\schroll\\Zotero\\storage\\5KM6D4ZB\\Fletcher Jr. et al. - 2019 - A practical guide for combining data to model spec.pdf:application/pdf;Snapshot:C\:\\Users\\schroll\\Zotero\\storage\\TVDLBWTT\\ecy.html:text/html},
