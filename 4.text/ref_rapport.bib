	urldate = {2024-05-06},
	date = {2004},
	langid = {english},
	note = {\_eprint: https://besjournals.onlinelibrary.wiley.com/doi/pdf/10.1111/j.0021-8901.2004.00918.x},
	keywords = {conservation, birds, management, sensitivity analysis, wind energy},
