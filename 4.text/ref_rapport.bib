	langid = {english},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1890/02-5078},
	keywords = {biological surveys, false-negative errors, habitat effects, presence–absence data, zero-inflated binomial ({ZIB}) model},
